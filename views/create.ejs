<%- include("partials/header.ejs") %>

<main>
    <form action="/create" method="post">
        <div class="input-field blog-title">
            <label for="blog-title"></label>
            <input 
                style="width: 800px" 
                type="text" 
                id="blog-title" 
                name="blog-title" 
                placeholder="Title"
                value="<%= locals ? locals["blog-title"] : "" %>"
            >
        </div>

        <div class="input-field blog-body">
            <label for="blog-body"></label>
            <textarea 
                style="resize: vertical; overflow: auto; width: 800px; height: 400px;" 
                type="text" 
                id="blog-body" 
                name="blog-body" 
                placeholder="Write something..."
            ><%= locals ? locals["blog-body"] : null %></textarea>
        </div>
        
        <div class="create-buttons">
            <input class="button" type="submit" value="Save">
            <input class="button" type="reset" value="Reset">
        </div>
    </form>
</main>

<%- include("partials/footer.ejs") %>